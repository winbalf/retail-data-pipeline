{
  "title": "Sales Trends & Analytics",
  "tags": [
    "retail",
    "trends",
    "analytics"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "1m",
  "panels": [
    {
      "id": 1,
      "title": "Weekly Sales Trends",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "Retail Analytics PostgreSQL"
          },
          "rawSql": "SELECT period_start as time, total_revenue FROM get_sales_trends($__timeFrom()::date, $__timeTo()::date, 'weekly', NULL) ORDER BY period_start",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth"
          },
          "unit": "currencyUSD"
        }
      }
    },
    {
      "id": 2,
      "title": "Quarterly Summary",
      "type": "table",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "Retail Analytics PostgreSQL"
          },
          "rawSql": "SELECT period_label as \"Year-Quarter\", total_revenue, transaction_count FROM get_sales_trends($__timeFrom()::date, $__timeTo()::date, 'quarterly', NULL) ORDER BY period_start DESC",
          "format": "table",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Monthly Category Performance",
      "type": "heatmap",
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "datasource": {
            "type": "postgres",
            "uid": "Retail Analytics PostgreSQL"
          },
          "rawSql": "SELECT category, TO_DATE(year::text || '-' || month::text || '-01', 'YYYY-MM-DD') as time, SUM(total_revenue) as revenue FROM mv_monthly_sales_by_category WHERE TO_DATE(year::text || '-' || month::text || '-01', 'YYYY-MM-DD') >= $__timeFrom()::date AND TO_DATE(year::text || '-' || month::text || '-01', 'YYYY-MM-DD') <= $__timeTo()::date GROUP BY category, year, month ORDER BY time",
          "format": "table",
          "refId": "A"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1y",
    "to": "now"
  }
}